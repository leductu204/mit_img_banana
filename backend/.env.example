# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
# For local development: 127.0.0.1
# For production (public access): 0.0.0.0
HOST=127.0.0.1

# Higgsfield API Credentials
# Get these from https://higgsfield.ai
# 1. Login to your account
# 2. Open DevTools (F12) → Application → Cookies
# 3. Copy __client value to HIGGSFIELD_SSES
# 4. Copy __session value to HIGGSFIELD_COOKIE
HIGGSFIELD_SSES=your_sses_token_here
HIGGSFIELD_COOKIE=your_cookie_here

# Google OAuth Credentials
# Get these from https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Set authorized redirect URI to: http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT Configuration
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_DAYS=7

# Database Configuration
DATABASE_PATH=database/app.db

# Credits Configuration
DEFAULT_USER_CREDITS=1000

# Frontend URL (for OAuth callback redirect)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated, for production)
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=

# Admin Auto-Setup (Optional - for first-time setup)
# Leave empty to skip auto-creation
ADMIN_USERNAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=

# PayOS Configuration
PAYOS_CLIENT_ID=
PAYOS_API_KEY=
PAYOS_CHECKSUM_KEY=

# Google Veo API Cookie (for video generation)
GOOGLE_VEO_COOKIE=

# Proxy Settings (for VPS deployment)
# Enable proxy for all Google API requests
PROXY_ENABLED=false
# Format: socks5://user:pass@host:port or http://host:port
PROXY_URL=

# reCAPTCHA API Key (optional)
RECAPTCHA_AUTH_KEY=
